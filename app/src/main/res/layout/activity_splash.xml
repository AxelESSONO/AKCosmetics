<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <TextView
            android:id="@+id/name_entreprise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AK Cosmetics"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="45dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/slogan_entreprise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La beautÃ© en un clic"
            android:layout_below="@id/name_entreprise"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:layout_below="@id/progressBar"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:layout_marginTop="30dp"
            android:gravity="center"/>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:progress="@android:integer/config_mediumAnimTime"
        android:indeterminateDrawable="@drawable/progress"/>

</RelativeLayout>